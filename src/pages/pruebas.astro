---
import Layout from "../layouts/Layout.astro";
import {Icon} from "astro-icon/components"
---

<Layout>
<!DOCTYPE html>
<html>
<head>
<title>Cambiar Bot√≥n</title>
<style>
#miBoton {
    background-color: black;
    color: white;
}
#otroBoton {
    background-color: rgb(0, 0, 0);
    color: rgb(255, 255, 255);
    display: none;
}
</style>
</head>
<body>
  <button id="miBoton"> <Icon name="streamline:button-play-solid" width="32" height="32"/></button>
  <button id="otroBoton"><Icon name="streamline:button-pause-2-solid" width="32" height="32"/></button>

  <script>
    let mostrandoOriginal = true;
    document.getElementById("miBoton").addEventListener("click", function() {
      if (mostrandoOriginal) {
        document.getElementById("miBoton").style.display = "none";
        document.getElementById("otroBoton").style.display = "block";
      } else {
        document.getElementById("miBoton").style.display = "block";
        document.getElementById("otroBoton").style.display = "none";
      }
      mostrandoOriginal = !mostrandoOriginal;
    });


  let mostrandoCopia = true;
    document.getElementById("otroBoton").addEventListener("click", function() {
      if (mostrandoCopia) {
        document.getElementById("otroBoton").style.display = "none";
        document.getElementById("miBoton").style.display = "block";
      } else {
        document.getElementById("otroBoton").style.display = "block";
        document.getElementById("miBoton").style.display = "none";
      }
      mostrandoCopia = !mostrandoCopia;
    });
  </script>
</body>
</html>
</Layout>